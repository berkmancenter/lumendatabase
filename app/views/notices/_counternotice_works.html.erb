<section class="works">
  <ol id="works" class="copyright-claims">
    <% works.each_with_index do |work, idx| %>
      <%= content_tag_for(:li, work) do %>
        <h4>Copyright claim #<%= idx + 1 %></h4>
        <div class="row">
          <div class="kind">
            <span class="label">Kind of Work:</span> <span class="field"><%= work.kind %></span>
          </div>
        </div>
        <div class="row">
          <div class="description">
            <span class="label">Description</span> <span class="field"><%= work.description %></span>
          </div>
        </div>

        <%= render 'works_urls',
                    work: work,
                    original_title: 'Original URLs:',
                    infringing_title: 'Allegedly Infringing URLs:',
                    show_original: true,
                    show_infringing: true
        %>
      <% end %>
    <% end %>
  </ol>
</section>

<section class="works">
  <ol id="works" class="copyright-claims">
    <% works.each_with_index do |work, idx| %>
      <%= content_tag_for(:li, work) do %>
        <h4>Requests for Removal from Search Results</h4>

        <div class="row">
          <span class="label infringing-title">Location of Some of the Material Requested for Removal:</span>
          <ol class="list infringing-urls">
            <% work.infringing_urls.each do |url| %>
              <%= content_tag_for(:li, url) do %>
                <%= url.url %>
              <% end %>
            <% end %>
          </ol>
        </div>
      <% end %>
    <% end %>
	This user requested removal of <%= @notice.url_count.nil? ? "unspecified" : @notice.url_count %> URLs.
  </ol>
</section>

<section class="search-results">
  <header>
    <%= form_tag(notices_search_index_path, method: :get, id: 'facets-form') do %>
      <% if @results.facets %>
        <ol class="results-facets">
          <li class="title"><span>Search Filters<span></li>
            <%= render 'term_facet', type: 'sender_name_facet', results: @results, display_name: 'Sender' %>
            <%= render 'term_facet', type: 'recipient_name_facet', results: @results, display_name: 'Recipient' %>
            <%= render 'term_facet', type: 'category_facet', results: @results, display_name: 'Category' %>
            <%= render 'term_facet', type: 'tag_list_facet', results: @results, display_name: 'Tags' %>
            <%= render 'term_facet', type: 'country_code_facet', results: @results, display_name: 'Country' %>
            <%= render 'range_facet', type: 'date_received_facet', results: @results, display_name: 'Date' %>
          <li class="button-wrapper"><button class="">Apply</button></li>
        </ol>
      <% end %>
    <% end %>
    <div class="result-stats">Found <%= @results.total_entries %> results</div>
  </header>
  <ol class="results-list">
    <%= render partial: 'result', collection: @results %>
  </ol>
  <%= will_paginate @results %>
</section>

<section class="works">
  <ol id="works" class="copyright-claims">
    <% works.each_with_index do |work, idx| %>
      <%= content_tag_for(:li, work) do %>
        <h4>Court order #<%= idx + 1 %></h4>
        <div class="row">
          <div class="description">
            <span class="label">Subject</span> <span class="field"><%= work.description %></span>
          </div>
        </div>

        <%= render 'works_urls',
                    work: work,
                    infringing_title: 'Targeted URLs:',
                    show_original: false,
                    show_infringing: true
        %>
      <% end %>
    <% end %>
  </ol>
</section>

<% title 'Blog' %>

<section class="posts">
  <%= render @blog_entries %>
</section>

<aside class="sidebar">
  <h4>What we're reading</h4>
  <ol>
    <% @we_are_reading.each do |blog_entry| %>
      <li><%= link_to(blog_entry.title, blog_entry.url) %></li>
    <% end %>
  </ol>
</aside>

<%= will_paginate @blog_entries %>

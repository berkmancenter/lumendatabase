<header class="app search-header">
  <%= render 'shared/navigation' -%>
  <div class="container search">
    <div class="width-wrapper">
      <h1>
        <%= link_to root_path, :id => "root" do %>
          <%= image_tag("logo.svg") %>
        <% end %>
      </h1>
      <%= render 'shared/search' %>
    </div>
  </div>
  <%= form_tag(notices_search_index_path, method: :get) do %>
  <div class="container advanced-search">
    <div class="width-wrapper">
      <h5><b>Advanced Search</b> &ndash; Add additional search queries</h5>
      <% Notice::SEARCHABLE_FIELDS.each do |field| %>
        <%= render field %>
      <% end %>
      <div class="field-group template-row">
        <div class="input select">
          <%= select_tag(
              'search-field',
              options_for_select(
                Notice::SEARCHABLE_FIELDS.collect{|f| [f.title, f.parameter]}
              )
            ) %>
        </div>
        <input type="text" name="search-term">
      </div>
      <a id="duplicate-field" href="#" class="add-group">Add more</a>
      <div class="resubmit">
        <button class="button">Advanced Search</button>
      </div>
    </div>
  </div>
<% end %>
</header>
